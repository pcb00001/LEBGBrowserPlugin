{
	"name": "Học từ vựng",
	"version": "0.1",
	"description": "Học từ vựng",
	"manifest_version": 2,
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"permissions": [
		"<all_urls>",
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"activeTab",
		"contextMenus",
		"management",
		"notifications",
		"storage",
		"identity",
		"webRequest",
		"webRequestBlocking"
	],
	"background": {
		"scripts": [
			"jquery-3.3.1.min.js",
			"words_collection.js",
			"background.js"
		]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [
				"setting_page.css"
			],
			"js": [
				"jquery-3.3.1.min.js",
				"content_script.js"
			],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"setting_page.html",
		"content_script_layout.html",
		"setting_page.js"
	],
  	"content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self' 'unsafe-eval'"
}